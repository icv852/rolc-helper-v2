generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Dlc {
  name String @id
  Map  Map[]
  Task Task[]
}

model Map {
  name    String @id
  rank    Int
  maxLv   Int
  dlc     Dlc    @relation(fields: [dlcName], references: [name])
  dlcName String
  Task    Task[]
}

model Item {
  name     String @id
  copper   Int
  silver   Int
  gold     Int
  shadow   Int
  huang    Int
  normal   Int
  dlcName  String
  Task     Task[]
  coinType String
  notice   String
}

model Task {
  name       String  @id
  map        Map     @relation(fields: [mapName], references: [name])
  dlc        Dlc     @relation(fields: [dlcName], references: [name])
  reward     Item    @relation(fields: [itemName], references: [name])
  day        Boolean
  dayS       Boolean
  evening    Boolean
  eveningS   Boolean
  night      Boolean
  nightS     Boolean
  difficulty String
  mapName    String
  dlcName    String
  itemName   String
}

model Weapon {
  name         String  @id
  rank         Int
  rare         String
  attribute    String
  leftHand     Boolean
  level        Int
  phyAtk       Int
  magAtk       Int
  crit         String
  skill1       String
  skill2       String
  skill3       String
  skill4       String
  skill5       String
  skill6       String
  rawMaterials String
  base         String
  type         String
}

model Ring {
  name         String @id
  rank         Int
  rare         String
  level        Int
  phyAtk       Int
  magAtk       Int
  crit         String
  skill1       String
  skill2       String
  skill3       String
  skill4       String
  skill5       String
  skill6       String
  rawMaterials String
  base         String
}

model Equipment {
  name         String @id
  part         String
  phyDef       Int
  magDef       Int
  inscription  String
  notice       String
  type         String
  pro          String
  rank         Int
  rare         String
  level        Int
  rawMaterials String
  base         String
}
